{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Configure",
            "command": [
               "cmake -S . -B out --preset=${input:arch}-${input:type}-${input:platform}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
        },
        {
            "type": "shell",
            "label": "Build",
            "command": [
                "if ${input:type} == 'debug' (cmake --build out --config debug) else (cmake --build out --config release)"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
        }
    ],
    "inputs": [
        {
            "id": "arch",
            "type": "pickString",
            "options": [
                "x64",
                "x86"
            ],
            "default": "x64",
            "description": "Architecture"
        },
        {
            "id": "type",
            "type": "pickString",
            "options": [
                "debug",
                "release",
                "relminsize",
            ],
            "default": "debug",
            "description": "Build type"
        },
        {
            "id": "platform",
            "type": "pickString",
            "options": [
                "windows",
            ],
            "default": "windows",
            "description": "Platform"
        },
    ]
}